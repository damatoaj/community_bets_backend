{
    "compilerOptions": {
        "target": "es6",
        "module": "NodeNext",
        "outDir": "src/dist",
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "NodeNext"
    },
    "ts-node": {
        // Tell ts-node CLI to install the --loader automaticall
        "esm": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}